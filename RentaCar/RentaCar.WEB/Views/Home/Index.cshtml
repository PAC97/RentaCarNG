
<!DOCTYPE html>

<html ng-app="RentaCarApp" ng-controller="MainController">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>

    @* Librerias Javascript *@
    <script src="~/Content/js/angular.min.js"></script>
    <script src="~/Content/js/angular-route.min.js"></script>
    <script src="~/Content/js/ngMask.min.js"></script>

    <script src="~/Content/MdAngular/MainController.js"></script>
    <script src="~/Content/MdAngular/AdministracionCtrl.js"></script>
    <script src="~/Content/MdAngular/EstadoCtrl.js"></script>
    <script src="~/Content/MdAngular/TipoUserCtrl.js"></script>
    <script src="~/Content/MdAngular/UserCtrl.js"></script>
    <script src="~/Content/MdAngular/config.js"></script>
    <script src="https://kit.fontawesome.com/9bf7e5bdfa.js"></script>


    @* CSS *@
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    @*<link href="~/Content/css/all.css" rel="stylesheet" />*@
    <link href="~/Content/css/sb-admin-2.css" rel="stylesheet" />
    <link href="~/Content/css/sweetalert2.min.css" rel="stylesheet" />

</head>
<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <!--*** Aqui va el ng-include del menu ***-->
        @if (Session["NomUser"] != null && Session["Pass"] != null)
        {
            <div ng-include="Menu">

            </div>
        }

        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                @* Menu superios aquii *@
                <div ng-include="MenuSuperior"></div>
                <!-- End of Topbar -->
                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
                    </div>

                    <!-- Content Row -->
                    <div class="row">
                        <div class="col-md-12" ng-view></div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->
            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Your Website 2019</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>


    <!-- Bootstrap core JavaScript-->
    <script src="~/Content/js/jquery.min.js"></script>
    <script src="~/Content/js/bootstrap.bundle.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Content/js/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Content/js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->

    <script src="~/Content/js/Chart.min.js"></script>


    <script src="~/Content/js/sweetalert2.all.min.js"></script>

</body>
</html>
