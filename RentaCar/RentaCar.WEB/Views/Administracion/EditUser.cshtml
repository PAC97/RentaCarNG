
<div class="ml-3 jumbotron">

    <div class="">

        <div class="mt-2">
            Editar Tipo de Usuario
            <form ng-submit="guardarUser">

                <div class="row">


                    <div class="col-md-4">
                        <input type="text" class="form-control mt-3" ng-model="User.data.Nombre" placeholder="Nombre" />
                    </div>
                    <div class="col-md-4">
                        <input type="text" class="form-control mt-3" ng-model="User.data.Apellido" placeholder="Apellido" />
                    </div>
                    <div class="col-md-4">
                        <input type="text" class="form-control mt-3" ng-model="User.data.Direccion" placeholder="Direccion" />
                    </div>
                    <div class="col-md-4">
                        <input type="text" class="form-control mt-3" ng-model="User.data.Email" placeholder="Email" />
                    </div>
                    <div class="col-md-4">
                        <input type="text" class="form-control mt-3" ng-model="User.data.Telefono" placeholder="Telefóno" />
                    </div>
                    <div ng-hide="creando" class="col-md-4">
                        <select ng-options="e.EstadoID as e.Nombre for e in EstadoData" ng-model="User.data.EstadoID" class="form-control mt-3">
                            <option value=""></option>
                        </select>
                    </div>
                    <div class="col-md-4" ng-hide="Editando">
                        <input type="text" class="form-control mt-3" ng-model="User.data.NombreUser" placeholder="Nombre de Usuario" />
                    </div>
                    <div class="col-md-4" ng-hide="Editando">
                        <input type="password" class="form-control mt-3" ng-model="User.data.Pass" placeholder="Password" />
                    </div>
                    <div ng-show="creando" class="col-md-4">
                        <select ng-options="tu.TipoUsuarioID as tu.Nombre for tu in TipoUserData" ng-model="User.data.TipoUsuarioID" class="form-control mt-3">
                            <option value="">Seleccione...</option>
                        </select>
                    </div>
                    <div class="col-md-4" ng-hide="creando"><input type="hidden" class="form-control" ng-model="User.data.UsuarioID" readonly="readonly" /></div>

                    <div class="col-md-4"><input type="submit" ng-click="guardarUser()" value="Guardar" class="btn btn-primary mt-3 mb-3" /></div>
                    {{User.data | json}}
                </div>
            </form>
        </div>
        <div class="col-md-2"></div>
    </div>

</div>

